<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServerApp.view.DetailPage"
             Title="Detail Page">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image x:Name="image" Aspect="AspectFit"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Author: "/>
                    <Label x:Name="author"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Total collections: "/>
                    <Label x:Name="total_collections"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Total likes: "/>
                    <Label x:Name="total_likes"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Label Text="Total photos: "/>
                    <Label x:Name="total_photos"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>